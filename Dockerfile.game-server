FROM node:18-alpine

WORKDIR /app

COPY package*.json ./
COPY pnpm-lock.yaml ./

RUN npm install -g pnpm
RUN pnpm install --frozen-lockfile

COPY server/ ./server/
COPY tsconfig.json ./

RUN pnpm run build:standalone

EXPOSE 3001

ENV NODE_ENV=production
ENV WEBSOCKET_HOST=0.0.0.0
ENV WEBSOCKET_PORT=3001

CMD ["node", "dist/standalone-server.js"]
